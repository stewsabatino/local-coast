{{#each user.items as |item|}}
    <div class="row mx-auto my-4">
        <div class="col-md-4">
            <div class="d-flex flex-md-column justify-content-between text-center">
                <img class="playlist-display" src="{{item.images.[0].url}}"/>
            </div>
        </div>
        <div class="col-md-6 w-75 d-flex align-items-center">
            <div>
                <div class="text-light">
                    <h2 style="letter-spacing: 0.02em;" class="display-4">{{item.name}}</h2>
                    <p class="lead">Lorem ipsum dolor sit amet.</p> 
                    <p id="p-name" style="display: none;">{{item.name}}</p>
                    <p id="p-uri"style="display: none;">{{item.uri}}</p>
                    <p id="p-length" style="display: none;">3</p>
                    <p id="p-id" style="display: none;">{{item.id}}</p>
                    <button class="playlist-button btn btn-outline-light" id="addHome">Share Playlist</button>
                </div>
            </div>
        </div>
    
